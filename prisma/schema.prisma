// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  CASHIER
}

// Enum ini boleh dihapus jika paymentMethod di bawah jadi String
// Tapi kalau mau tetap pakai Enum, WAJIB TAMBAH 'DP'
enum PaymentMethod {
  CASH
  QRIS
  TRANSFER
  DP        // <--- TAMBAHAN PENTING (Kalau tetap mau pakai Enum)
}

model User {
  id        String   @id @default(cuid())
  name      String
  username  String   @unique
  password  String
  role      Role     @default(CASHIER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id              String            @id @default(cuid())
  barcode         String            @unique
  name            String
  price           Int
  costPrice       Int
  stock           Int
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  TransactionItem TransactionItem[]
}

model Transaction {
  id            String   @id @default(cuid())
  invoiceNo     String   @unique
  totalAmount   Int
  
  // REVISI: Ubah jadi String agar bisa terima "DP", "GOPAY", dll tanpa error
  // Jika ingin tetap Enum, pastikan Enum PaymentMethod di atas sudah ada "DP"
  paymentMethod String   
  
  cashReceived  Int?
  changeAmount  Int?
  paymentProof  String?  
  createdAt     DateTime @default(now())
  
  // Fitur Baru (SUDAH BENAR)
  platform      String   @default("TOKO") 
  customerName  String?  
  paymentStatus String   @default("PAID") 
  debtAmount    Int      @default(0)      
   
  items         TransactionItem[]
}

model TransactionItem {
  id            String      @id @default(cuid())
  transactionId String
  transaction   Transaction @relation(fields: [transactionId], references: [id])
  productId     String
  product       Product     @relation(fields: [productId], references: [id])
  quantity      Int
  priceAtTime   Int
  costAtTime    Int
}

model Expense {
  id          String   @id @default(cuid())
  name        String
  amount      Int
  category    String   @default("Umum")
  description String?
  date        DateTime @default(now())
}